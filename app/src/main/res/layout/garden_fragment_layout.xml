<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.GardenFragment">

    <!--TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_first_fragment"
        app:layout_constraintBottom_toTopOf="@id/button_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_first" /-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="@color/backgroundBrown"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/bobtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0.8"
            android:src="@drawable/bobtext"
            />

        <!--            app:layout_constraintLeft_toLeftOf="@+id/bobtext"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/bobtext"-->
        <TextView
            android:id="@+id/simple_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/bobtext"
            android:layout_marginTop="25dp"
            android:text="yolofdasfdsafdsa"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="yolofdasfdsafdsa"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_below="@+id/simple_text"
            />
        <Button
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:text="yolofdasfdsafdsa"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_below="@+id/option1"
            />
        <Button
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:text="yolofdasfdsafdsa"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_below="@+id/option2"
            />
        <Button
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="0dp"
            android:text="yolofdasfdsafdsa"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_below="@+id/option3"
            />

    </RelativeLayout>



    <ImageView
        android:id="@+id/bob"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bob"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>